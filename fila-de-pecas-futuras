#include <stdio.h>
#include <stdlib.h>
#include <time.h>

#define TAM_FILA 5
#define TAM_PILHA 3

/* Estrutura da peca */
typedef struct {
    char nome;
    int id;
} Peca;

/* Estrutura da fila circular */
typedef struct {
    Peca itens[TAM_FILA];
    int inicio;
    int fim;
    int quantidade;
} Fila;

/* Estrutura da pilha */
typedef struct {
    Peca itens[TAM_PILHA];
    int topo;
} Pilha;

/* Contador global para gerar IDs unicos */
int contadorID = 0;

/* Gera uma peca aleatoria */
Peca gerarPeca() {
    char tipos[4] = {'I', 'O', 'T', 'L'};
    Peca p;
    p.nome = tipos[rand() % 4];
    p.id = contadorID++;
    return p;
}

/* Inicializa a fila cheia */
void inicializarFila(Fila *f) {
    f->inicio = 0;
    f->fim = 0;
    f->quantidade = 0;

    for (int i = 0; i < TAM_FILA; i++) {
        f->itens[f->fim] = gerarPeca();
        f->fim = (f->fim + 1) % TAM_FILA;
        f->quantidade++;
    }
}

/* Inicializa a pilha vazia */
void inicializarPilha(Pilha *p) {
    p->topo = -1;
}

/* Enfileira uma nova peca */
void enqueue(Fila *f, Peca p) {
    if (f->quantidade == TAM_FILA) {
        return; /* nunca deve ocorrer, fila sempre cheia apenas depois de remover */
    }
    f->itens[f->fim] = p;
    f->fim = (f->fim + 1) % TAM_FILA;
    f->quantidade++;
}

/* Remove peca da fila (dequeue) */
Peca dequeue(Fila *f) {
    Peca removida = f->itens[f->inicio];
    f->inicio = (f->inicio + 1) % TAM_FILA;
    f->quantidade--;
    return removida;
}

/* Empilha uma peca */
int push(Pilha *p, Peca x) {
    if (p->topo == TAM_PILHA - 1) {
        return 0; /* pilha cheia */
    }
    p->topo++;
    p->itens[p->topo] = x;
    return 1;
}

/* Desempilha */
int pop(Pilha *p, Peca *recebida) {
    if (p->topo == -1) {
        return 0; /* vazia */
    }
    *recebida = p->itens[p->topo];
    p->topo--;
    return 1;
}

/* Exibe fila e pilha */
void exibirEstado(Fila *f, Pilha *p) {
    printf("\nEstado atual:\n");

    /* Fila */
    printf("Fila de pecas: ");
    int i = f->inicio;
    for (int c = 0; c < f->quantidade; c++) {
        printf("[%c %d] ", f->itens[i].nome, f->itens[i].id);
        i = (i + 1) % TAM_FILA;
    }
    printf("\n");

    /* Pilha */
    printf("Pilha de reserva (Topo -> Base): ");
    if (p->topo == -1) {
        printf("[vazia]");
    } else {
        for (int i = p->topo; i >= 0; i--) {
            printf("[%c %d] ", p->itens[i].nome, p->itens[i].id);
        }
    }
    printf("\n");
}

/* Menu */
void menu() {
    printf("\nOpcoes:\n");
    printf("1 - Jogar peca\n");
    printf("2 - Reservar peca\n");
    printf("3 - Usar peca reservada\n");
    printf("0 - Sair\n");
    printf("Escolha: ");
}

int main() {
    Fila fila;
    Pilha pilha;
    int opcao;

    srand(time(NULL));

    inicializarFila(&fila);
    inicializarPilha(&pilha);

    while (1) {
        exibirEstado(&fila, &pilha);
        menu();
        scanf("%d", &opcao);

        if (opcao == 0) {
            printf("Saindo...\n");
            break;
        }

        switch (opcao) {

        /* Jogar peca (dequeue) */
        case 1: {
            Peca jogada = dequeue(&fila);
            printf("Peca jogada: [%c %d]\n", jogada.nome, jogada.id);

            /* repoe nova peca automaticamente */
            enqueue(&fila, gerarPeca());
            break;
        }

        /* Reservar peca (move da fila para a pilha) */
        case 2: {
            if (pilha.topo == TAM_PILHA - 1) {
                printf("A pilha esta cheia! Nao e possivel reservar.\n");
                break;
            }

            Peca reservada = dequeue(&fila);
            push(&pilha, reservada);

            printf("Peca reservada: [%c %d]\n", reservada.nome, reservada.id);

            /* repoe nova peca na fila */
            enqueue(&fila, gerarPeca());
            break;
        }

        /* Usar peca reservada (pop) */
        case 3: {
            Peca usada;

            if (!pop(&pilha, &usada)) {
                printf("A pilha esta vazia! Nao ha peca reservada.\n");
                break;
            }

            printf("Peca usada: [%c %d]\n", usada.nome, usada.id);
            break;
        }

        default:
            printf("Opcao invalida!\n");
        }
    }

    return 0;
}
